@page "/fetchdata"

<h1>Weather forecast</h1>

<p>This component demonstrates fetching data from the server.</p>

@if (forecasts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">UpdateTime (Local)</th>
                <th scope="col">UpdateTime (UTC)</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in forecasts)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.UpdateDate.ToLocalTime()</td>
                    <td>@item.UpdateDate</td>
                    <td>@item.Value</td>
                </tr>
            }
        </tbody>
    </table>
}



